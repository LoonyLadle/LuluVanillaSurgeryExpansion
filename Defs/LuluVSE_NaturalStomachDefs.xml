<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Defs>
	<ThingDef ParentName="BodyPartNaturalBase">
		<!-- Used vanilla-like name to ease compatibility between mods. -->
		<defName>Stomach</defName>
		<label>stomach</label>
		<description>A biological human stomach. Breaks down and absorbs nutrients from food.</description>
		<descriptionHyperlinks><RecipeDef>LuluVSE_InstallNaturalStomach</RecipeDef></descriptionHyperlinks>
		<statBases>
			<MarketValue>400</MarketValue>
			<Mass>1</Mass>
		</statBases>
	</ThingDef>
	
	<RecipeDef ParentName="SurgeryInstallBodyPartNaturalBase">
		<defName>LuluVSE_InstallNaturalStomach</defName>
		<label>install stomach</label>
		<description>Install a biological stomach.</description>
		<descriptionHyperlinks><ThingDef>Stomach</ThingDef></descriptionHyperlinks>
		<jobString>Installing stomach.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Stomach</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Stomach</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Stomach</li>
		</appliedOnFixedBodyParts>
	</RecipeDef>
</Defs>
