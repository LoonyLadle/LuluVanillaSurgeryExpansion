<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Defs>
	<ThingDef ParentName="BodyPartNaturalBase">
		<!-- Used vanilla-like name to ease compatibility between mods. -->
		<defName>Stomach</defName>
		<label>stomach</label>
		<description>A biological human stomach. Breaks down and absorbs nutrients from food.</description>
		<statBases>
			<MarketValue>400</MarketValue>
			<Mass>1</Mass>
		</statBases>
	</ThingDef>
	
	<RecipeDef ParentName="SurgeryFlesh">
		<defName>LuluVSE_InstallNaturalStomach</defName>
		<label>install stomach</label>
		<description>Install a biological stomach.</description>
		<workerClass>Recipe_InstallNaturalBodyPart</workerClass>
		<jobString>Installing stomach.</jobString>
		<workAmount>2500</workAmount>
		<skillRequirements>
			<Medicine>5</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Stomach</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>Stomach</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Stomach</li>
		</appliedOnFixedBodyParts>
	</RecipeDef>
</Defs>
