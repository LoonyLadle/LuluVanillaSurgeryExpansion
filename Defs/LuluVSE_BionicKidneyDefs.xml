<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Defs>
  <ThingDef ParentName="BodyPartBionicBase">
    <defName>LuluVSE_BionicKidney</defName>
    <label>bionic kidney</label>
    <description>An advanced artifical kidney. It is better than a biological kidney in almost every way. A lattice-dust healing system allows it to recover from damage.</description>
    <techLevel>Spacer</techLevel>
    <costList>
      <Plasteel>10</Plasteel>
      <ComponentSpacer>3</ComponentSpacer>
    </costList>
    <statBases>
      <WorkToMake>26000</WorkToMake>
      <Mass>1</Mass>
    </statBases>
    <techHediffsTags>
      <li>Advanced</li>
    </techHediffsTags>
  </ThingDef>

  <HediffDef ParentName="AddedBodyPartBase">
    <defName>LuluVSE_BionicKidney</defName>
    <label>bionic kidney</label>
    <labelNoun>a bionic kidney</labelNoun>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.1</partEfficiency>
    </addedPartProps>
    <spawnThingOnRemoved>LuluVSE_BionicKidney</spawnThingOnRemoved>
  </HediffDef>

  <RecipeDef ParentName="SurgeryFlesh">
    <defName>LuluVSE_InstallBionicKidney</defName>
    <label>install bionic kidney</label>
    <description>Install a bionic kidney.</description>
    <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
    <jobString>Installing bionic kidney.</jobString>
    <workAmount>2000</workAmount>
    <skillRequirements>
      <Medicine>5</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>LuluVSE_BionicKidney</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <thingDefs>
        <li>LuluVSE_BionicKidney</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Kidney</li>
    </appliedOnFixedBodyParts>
    <addsHediff>LuluVSE_BionicKidney</addsHediff>
  </RecipeDef>
</Defs>
